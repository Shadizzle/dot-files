[colors]
background = ${xrdb:*color0:#f21d1f21}
background-alt = ${xrdb:*color8:#282a2e}
foreground = ${xrdb:*color7:#a3a5a5}
foreground-alt = ${xrdb:*color15:#ffffff}
primary = #8abeb7
secondary = #b5bd68
alert = #cc6666

[bar/main]
width = 100%
height = 36
bottom = true
fixed-center = true

background = #00000000
foreground = #ffffff

line-size = 3
line-color = #f00

padding-left = 3
padding-right = 3

module-margin-left = 2
module-margin-right = 2

font-0 = Symbola:pixelsize=12:weight=bold;3
font-1 = Typicons:pixelsize=14;3

modules-left = powermenu xbacklight volume
modules-center = 
modules-right = wlan eth filesystem memory cpu battery date

cursor-click = pointer
cursor-scroll = ns-resize

[module/powermenu]
type = custom/menu

format = <label-toggle> <menu>
label-open = "⏻"
label-close = "⏻"
label-separator = " "

menu-0-0 = Shutdown
menu-0-0-exec = systemctl poweroff

menu-0-1 = Reboot
menu-0-1-exec = systemctl reboot

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}

label-layout = %layout%

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted =  %percentage_used%%

[module/xbacklight]
type = internal/xbacklight

format = <label> <bar>
label = 

bar-width = 10
bar-indicator = ◎
bar-indicator-foreground = ${colors.foreground}
bar-indicator-font = 2
bar-fill = " ◦ "
bar-fill-font = 2
bar-fill-foreground = #ffffff
bar-empty = " ◦ "
bar-empty-font = 2
bar-empty-foreground = ${colors.foreground-alt}

[module/volume]
type = internal/volume

format-volume = <label-volume> <bar-volume>
label-volume = 
label-volume-foreground = ${root.foreground}

format-muted = <label-muted> <bar-volume>
label-muted = "  "
format-muted-foreground = ${colors.foreground-alt}

bar-volume-width = 10
bar-volume-foreground-0 = #ffffff
bar-volume-foreground-1 = #ffffff
bar-volume-foreground-2 = #ffffff
bar-volume-foreground-3 = #ffffff
bar-volume-foreground-4 = #ffffff
bar-volume-foreground-5 = #ffffff
bar-volume-foreground-6 = #ffffff
bar-volume-gradient = false
bar-volume-indicator = ◎
bar-volume-indicator-font = 2
bar-volume-fill = " ◦ "
bar-volume-fill-font = 2
bar-volume-empty = " ◦ "
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/cpu]
type = internal/cpu
interval = 2
format = " <label>"
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
;format-underline = #4bffdc
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp9s0
interval = 3.0

format-connected =  <label-connected>
;format-connected-underline = #9f78e1
label-connected = %essid%

format-disconnected =

[module/eth]
type = internal/network
interface = enp3s0
interval = 3.0

format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

format-disconnected =

[module/date]
type = internal/date
interval = 5

date = " %B %d · %H:%M"
date-alt = " %Y-%m-%d"

label = %date%

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98

format-charging-prefix = " "
format-charging = <label-charging>

format-discharging-prefix = " "
format-discharging = <label-discharging>

format-full-prefix = " "

[settings]
